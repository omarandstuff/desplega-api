{
  "name": "desplega-api",
  "version": "2.4.0",
  "description": "Desplega pipile api",
  "license": "MIT",
  "homepage": "https://github.com/omarandstuff/desplega-api#readme",
  "repository": "github:omarandstuff/desplega-api",
  "bugs": "https://github.com/omarandstuff/desplega-api/issues",
  "author": "David De Anda <omarandstuff@gmail.com> (https://github.com/omarandstuff)",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist coverage",
    "build": "babel src --out-dir dist",
    "test": "jest --watch",
    "test:coverage": "jest --coverage --no-cache",
    "playground": "babel-node playground",
    "format": "prettier --write \"{src,tests}/**/*.js\"",
    "format:check": "prettier --list-different \"{src,tests}/**/*.js\"",
    "prepare": "yarn clean && yarn format:check && yarn test:coverage && yarn build"
  },
  "dependencies": {
    "ansi-regex": "^4.0.1",
    "babel-runtime": "^6.26.0",
    "chalk": "^2.4.2",
    "moment": "^2.24.0",
    "numeral": "^2.0.6",
    "ssh2": "^0.8.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "jest": "^23.6.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "simple",
    "deployer",
    "desplega",
    "automate",
    "ssh",
    "api",
    "pipeline",
    "stage",
    "step",
    "remote"
  ]
}
